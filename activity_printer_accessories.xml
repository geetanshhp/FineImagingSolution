<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrinterAccessories">


    <TextView
        android:layout_width="wrap_content"
        android:textSize="22dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="Printer Accessories "
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/colorPrimary"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center">
    </View>
    <View
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimary">
    </View>
    <ImageView
        android:layout_marginTop="33dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:id="@+id/imageprinteraccesries1"
        android:layout_height="300dp" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:layout_margin="04dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:id="@+id/textprinteracc1"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="33dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:id="@+id/imageprinteraccesries2"
        android:layout_height="300dp" />
    <TextView
       android:layout_marginBottom="08dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_margin="04dp"
        android:typeface="serif"
        android:layout_width="wrap_content"
        android:id="@+id/textprinteracc2"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>
    </ScrollView>